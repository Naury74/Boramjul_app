<LinearLayout
    android:id="@+id/main_background_Layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingHorizontal="15dp"
    android:paddingVertical="15dp"
    android:layout_width="310dp"
    android:layout_height="250dp">

    <FrameLayout
        android:id="@+id/main_layout"
        android:layout_width="270dp"
        android:layout_height="180dp"
        android:background="@drawable/round_white_backgorund">

        <TextView
            android:id="@+id/name_text"
            android:layout_width="220dp"
            android:layout_height="22dp"
            android:paddingRight="10dp"
            android:textColor="@color/boram_purple"
            android:textStyle="bold"
            android:textSize="16dp"
            android:fontFamily="@font/gmarketsansmedium"
            android:text=""
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="top|left"
            android:gravity="center|left">

        </TextView>

        <TextView
            android:id="@+id/address_text"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="13dp"
            android:paddingRight="10dp"
            android:fontFamily="@font/gmarketsanslight"
            android:text=""
            android:ellipsize="end"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="75dp"
            android:layout_gravity="top|left"
            android:gravity="top|left">

        </TextView>

        <TextView
            android:id="@+id/vicinity_text"
            android:layout_width="220dp"
            android:layout_height="20dp"
            android:textColor="#3D3D3D"
            android:textStyle="bold"
            android:textSize="12dp"
            android:paddingRight="10dp"
            android:fontFamily="@font/gmarketsanslight"
            android:text=""
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="bottom|left"
            android:gravity="bottom|left">

        </TextView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            >
            <ImageView
                android:id="@+id/place_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_open_book"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="top|left"
            android:gravity="center">
        </TextView>

    </FrameLayout>

</LinearLayout>