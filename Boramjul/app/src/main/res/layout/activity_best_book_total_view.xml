<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".BestBookTotalViewActivity">

    <FrameLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.5">

        <TextView
            android:id="@+id/back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:onClick="onClick_back"
            android:background="@drawable/ic_left_arrow">
        </TextView>

        <AutoCompleteTextView
            android:id="@+id/search_bar"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginTop="60dp"
            android:layout_marginHorizontal="15dp"
            android:elevation="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="45dp"
            android:layout_gravity="right"
            android:hint="목록 내 검색"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:background="@drawable/round_white_backgorund"
            android:completionThreshold="1">
        </AutoCompleteTextView>

        <ImageView
            android:id="@+id/search_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:clickable="true"
            android:onClick="onClick_search"
            android:elevation="10dp"
            android:background="@drawable/ic_search_purple"
            android:layout_marginTop="67.5dp"
            android:layout_marginHorizontal="35dp"
            android:paddingHorizontal="20dp"
            android:layout_gravity="right" />

        <TextView
            android:id="@+id/title"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="@color/boram_purple"
            android:textSize="30dp"
            android:fontFamily="@font/gilroy_light"
            android:textStyle="bold"
            android:text="Best Seller"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="bottom|left"
            android:gravity="center|left"/>

    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Best_list_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_layout"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.5">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>