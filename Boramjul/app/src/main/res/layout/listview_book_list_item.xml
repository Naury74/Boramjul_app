<LinearLayout
    android:id="@+id/main_background_Layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingHorizontal="15dp"
    android:layout_width="match_parent"
    android:layout_height="225dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="225dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="200dp"
            android:layout_height="22dp"
            android:textColor="@color/boram_purple"
            android:textStyle="bold"
            android:textSize="16dp"
            android:fontFamily="@font/gmarketsansmedium"
            android:text=""
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="160dp"
            android:layout_gravity="top|left"
            android:gravity="center|left">

        </TextView>

        <TextView
            android:id="@+id/author"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="12dp"
            android:fontFamily="@font/gmarketsanslight"
            android:text=""
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="95dp"
            android:layout_gravity="top|left"
            android:gravity="top|left">

        </TextView>

        <TextView
            android:id="@+id/score"
            android:layout_width="200dp"
            android:layout_height="15dp"
            android:textColor="@color/boram_purple"
            android:textStyle="bold"
            android:textSize="11dp"
            android:fontFamily="@font/gmarketsanslight"
            android:text=""
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="125dp"
            android:layout_gravity="top|left"
            android:gravity="top|left">

        </TextView>

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textColor="#3d3d3d"
            android:textSize="10dp"
            android:fontFamily="@font/gmarketsansmedium"
            android:text="평균 판매가"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="160dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="bottom|left"
            android:gravity="bottom|left">

        </TextView>

        <TextView
            android:id="@+id/price"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textColor="#FF5757"
            android:textStyle="bold"
            android:textSize="18dp"
            android:fontFamily="@font/gmarketsansmedium"
            android:text=""
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="160dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="bottom|left"
            android:gravity="bottom|right">

        </TextView>

        <TextView
            android:id="@+id/position_num"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="10dp"
            android:fontFamily="@font/gmarketsansmedium"
            android:background="@drawable/ripple_purple_btn"
            android:text=""
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="28dp"
            android:layout_gravity="top|left"
            android:gravity="center">
        </TextView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="125dp"
            android:layout_height="170dp"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            >
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>

    </FrameLayout>

</LinearLayout>