<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_background_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_white_backgorund"
    tools:context=".MainActivity">

    <com.yalantis.phoenix.PullToRefreshView
        android:id="@+id/pull_to_refresh"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:orientation="vertical"
            android:background="@drawable/round_white_backgorund"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="430dp"
                    android:background="@drawable/round_white_backgorund"
                    android:elevation="10dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="430dp"
                        android:background="@drawable/bottom_round_purple_gradient_bg">


                        <androidx.appcompat.widget.Toolbar
                            android:id="@+id/toolbar"
                            android:layout_width="match_parent"
                            android:layout_marginTop="40dp"
                            android:layout_height="50dp"
                            android:background="@null"
                            app:layout_constraintHeight_percent="0.08"
                            app:layout_constraintWidth_percent="1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0"
                            app:layout_constraintHorizontal_bias="0.5">

                        </androidx.appcompat.widget.Toolbar>

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:text="Boramjul"
                            android:layout_marginTop="40dp"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:fontFamily="@font/parisienne_regular"
                            android:gravity="center"
                            android:layout_gravity="center|top"
                            android:id="@+id/toolbar_title"
                            android:textSize="24dp"
                            />

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_bookmark"
                            android:layout_gravity="right"
                            android:layout_marginTop="55dp"
                            android:layout_marginHorizontal="15dp"
                            android:textColor="@color/boram_purple"
                            android:fontFamily="@font/gmarketsansmedium" />

                        <AutoCompleteTextView
                            android:id="@+id/search_bar"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="110dp"
                            android:layout_marginHorizontal="30dp"
                            android:paddingHorizontal="30dp"
                            android:layout_gravity="left"
                            android:hint="도서 검색"
                            android:background="@drawable/round_white_backgorund"
                            android:completionThreshold="1">
                        </AutoCompleteTextView>

                        <ImageView
                            android:id="@+id/search_btn"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:clickable="true"
                            android:background="@drawable/ic_search"
                            android:layout_marginTop="120dp"
                            android:layout_marginHorizontal="50dp"
                            android:paddingHorizontal="30dp"
                            android:layout_gravity="right" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="260dp"
                        android:layout_gravity="bottom|left"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginBottom="15dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:text="오늘의 \n추천 도서"
                            android:textSize="20dp"
                            android:layout_marginTop="30dp"
                            android:gravity="left"
                            android:textColor="#ffffff"
                            android:fontFamily="@font/gmarketsansmedium" />

                        <TextView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/ic_right_arrow"
                            android:gravity="left"
                            android:layout_marginTop="80dp"
                            android:textColor="@color/boram_purple"
                            android:fontFamily="@font/gmarketsansmedium" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="85dp"
                            android:layout_height="120dp"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="30dp"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="5dp">

                            <ImageView
                                android:id="@+id/reco_book_cover"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:elevation="5dp"/>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view"
                            android:layout_width="220dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center|right"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            >

                            <androidx.viewpager.widget.ViewPager
                                android:id="@+id/viewPager"
                                android:background="@color/light_gray"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            </androidx.viewpager.widget.ViewPager>

                            <LinearLayout
                                android:layout_width="45dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_gravity="right"
                                android:background="@drawable/round_70black_background">

                                <TextView
                                    android:id="@+id/count_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColor="#ffffff"
                                    android:textStyle="bold"
                                    android:textSize="9dp"
                                    android:text=""
                                    android:gravity="center">

                                </TextView>

                            </LinearLayout>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_gravity="center|bottom"
                                android:background="@color/boram_purple_sub">

                                <TextView
                                    android:id="@+id/reco_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColor="#ffffff"
                                    android:textStyle="bold"
                                    android:textSize="10dp"
                                    android:layout_marginHorizontal="10dp"
                                    android:fontFamily="@font/gmarketsansmedium"
                                    android:text=""
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:layout_gravity="center|right"
                                    android:gravity="center|right">

                                </TextView>

                                <TextView
                                    android:id="@+id/reco_author"
                                    android:layout_width="90dp"
                                    android:layout_height="match_parent"
                                    android:textColor="#ffffff"
                                    android:visibility="gone"
                                    android:textSize="10dp"
                                    android:layout_marginHorizontal="5dp"
                                    android:fontFamily="@font/gmarketsansmedium"
                                    android:text=""
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:layout_gravity="center|right"
                                    android:gravity="center|right">

                                </TextView>

                            </FrameLayout>

                        </androidx.cardview.widget.CardView>

                    </FrameLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:onClick="onClick_total_bs"
                    android:paddingHorizontal="15dp"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="베스트셀러"
                        android:textSize="18dp"
                        android:gravity="center|left"
                        android:textColor="#000000"
                        android:fontFamily="@font/gmarketsansmedium" />

                    <TextView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/ic_add"
                        android:gravity="center"
                        android:layout_gravity="center|right"
                        android:textColor="@color/boram_purple"
                        android:fontFamily="@font/gmarketsansmedium" />

                </FrameLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Best_list_view"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                </androidx.recyclerview.widget.RecyclerView>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingHorizontal="15dp"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="화제의 신간"
                        android:textSize="18dp"
                        android:gravity="center|left"
                        android:textColor="#000000"
                        android:fontFamily="@font/gmarketsansmedium" />

                    <TextView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/ic_add"
                        android:gravity="center"
                        android:layout_gravity="center|right"
                        android:textColor="@color/boram_purple"
                        android:fontFamily="@font/gmarketsansmedium" />

                </FrameLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/New_list_view"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                </androidx.recyclerview.widget.RecyclerView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="80dp"
                    android:layout_marginHorizontal="15dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <FrameLayout
                        android:id="@+id/top_banner_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="20dp"
                        android:background="#F1E4FF">

                        <androidx.cardview.widget.CardView
                            android:layout_width="130dp"
                            android:layout_height="180dp"
                            android:layout_gravity="center|right"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="5dp">

                            <ImageView
                                android:id="@+id/week_book_cover"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center|right"
                                android:scaleType="fitXY" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="30dp"
                            android:text="책 속의 말"
                            android:textSize="20dp"
                            android:layout_marginTop="35dp"
                            android:gravity="left"
                            android:ellipsize="end"
                            android:textColor="@color/boram_purple"
                            android:fontFamily="@font/gmarketsansmedium" />

                        <TextView
                            android:id="@+id/week_book_sub_title"
                            android:layout_width="180dp"
                            android:layout_height="100dp"
                            android:text=""
                            android:textSize="13dp"
                            android:layout_gravity="center|left"
                            android:gravity="left"
                            android:maxLines="5"
                            android:ellipsize="end"
                            android:textColor="#000000"
                            android:fontFamily="@font/gilroy_light" />

                        <TextView
                            android:id="@+id/week_book_title"
                            android:layout_width="180dp"
                            android:layout_height="20dp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:layout_marginBottom="35dp"
                            android:fontFamily="@font/gmarketsansmedium"
                            android:text=""
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_gravity="bottom|left"
                            android:gravity="bottom|left"/>

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </com.yalantis.phoenix.PullToRefreshView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tab_bar"
        android:layout_width="165dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/round_white_backgorund"
        android:elevation="5dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98"
        app:layout_constraintHorizontal_bias="0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            android:onClick="onClick_home"
            android:background="@drawable/ripple_white_btn"
            app:layout_constraintHeight_percent="1"
            app:layout_constraintWidth_percent="0.33"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0.01">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_home"
                android:layout_gravity="center"
                app:layout_constraintDimensionRatio="w,1:1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintHorizontal_bias="0.5">
            </ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/category_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            android:background="@drawable/ripple_white_btn"
            app:layout_constraintHeight_percent="1"
            app:layout_constraintWidth_percent="0.33"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/home_btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_dashboard"
                android:layout_gravity="center"
                app:layout_constraintDimensionRatio="w,1:1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintHorizontal_bias="0.5">
            </ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/secondhand_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            android:background="@drawable/ripple_white_btn"
            app:layout_constraintHeight_percent="1"
            app:layout_constraintWidth_percent="0.33"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/category_btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_handshake"
                android:layout_gravity="center"
                app:layout_constraintDimensionRatio="w,1:1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintHorizontal_bias="0.5">
            </ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/map_btn"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="15dp"
        android:elevation="8dp"
        android:clickable="true"
        android:onClick="onClick_search_map"
        android:background="@drawable/ripple_purple_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98"
        app:layout_constraintHorizontal_bias="1">

        <ImageView
            android:id="@+id/map_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_map"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0.15">
        </ImageView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:text="주변 검색"
            android:fontFamily="@font/gmarketsansmedium"
            android:textColor="#ffffff"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="2sp"
            app:autoSizeStepGranularity="1sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.35"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0.75"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>