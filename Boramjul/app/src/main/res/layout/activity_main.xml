<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_background_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/round_white_backgorund"
        android:theme="@style/ToolbarTheme"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.5">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/logo"
            android:layout_marginRight="10dp"
            android:layout_gravity="center">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Boramjul"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title"
            android:textSize="24dp"
            />

    </androidx.appcompat.widget.Toolbar>

    <com.yalantis.phoenix.PullToRefreshView
        android:id="@+id/pull_to_refresh"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintBottom_toTopOf="@+id/tab_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintHorizontal_bias="1">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:orientation="vertical"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:paddingHorizontal="20dp"
                    android:background="#905052A2">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="오늘의 \n추천 도서"
                        android:textSize="20dp"
                        android:layout_marginTop="35dp"
                        android:gravity="left"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/gilroy_extrabold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="85dp"
                        android:layout_height="120dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="35dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp">

                        <ImageView
                            android:id="@+id/reco_book_cover"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:elevation="5dp"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view"
                        android:layout_width="230dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center|right"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        >

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/viewPager"
                            android:background="@color/light_gray"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </androidx.viewpager.widget.ViewPager>

                        <LinearLayout
                            android:layout_width="45dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_gravity="right"
                            android:background="@drawable/round_70black_background">

                            <TextView
                                android:id="@+id/count_view"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="#ffffff"
                                android:textStyle="bold"
                                android:textSize="9dp"
                                android:text=""
                                android:gravity="center">

                            </TextView>

                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center|bottom"
                            android:background="#5052A2">

                            <TextView
                                android:id="@+id/reco_title"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="#ffffff"
                                android:textStyle="bold"
                                android:textSize="10dp"
                                android:layout_marginHorizontal="10dp"
                                android:fontFamily="@font/gmarketsansmedium"
                                android:text=""
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:layout_gravity="center|right"
                                android:gravity="center|right">

                            </TextView>

                            <TextView
                                android:id="@+id/reco_author"
                                android:layout_width="90dp"
                                android:layout_height="match_parent"
                                android:textColor="#ffffff"
                                android:visibility="gone"
                                android:textSize="10dp"
                                android:layout_marginHorizontal="5dp"
                                android:fontFamily="@font/gmarketsansmedium"
                                android:text=""
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:layout_gravity="center|right"
                                android:gravity="center|right">

                            </TextView>

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingHorizontal="20dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="베스트셀러"
                        android:textSize="22dp"
                        android:gravity="center|left"
                        android:textColor="#000000"
                        android:fontFamily="@font/gilroy_extrabold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="전체 보기"
                        android:textSize="12dp"
                        android:clickable="true"
                        android:onClick="onClick_total_bs"
                        android:gravity="center|right"
                        android:textColor="@color/boram_purple"
                        android:fontFamily="@font/gmarketsansmedium" />

                </FrameLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Best_list_view"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                </androidx.recyclerview.widget.RecyclerView>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingHorizontal="20dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="화제의 신간"
                        android:textSize="22dp"
                        android:gravity="center|left"
                        android:textColor="#000000"
                        android:fontFamily="@font/gilroy_extrabold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="전체 보기"
                        android:textSize="12dp"
                        android:gravity="center|right"
                        android:textColor="@color/boram_purple"
                        android:fontFamily="@font/gmarketsansmedium" />

                </FrameLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/New_list_view"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="20dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                </androidx.recyclerview.widget.RecyclerView>

                <FrameLayout
                    android:id="@+id/top_banner_layout"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="30dp"
                    android:paddingHorizontal="20dp"
                    android:background="#20000000">

                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center|right"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp">

                        <ImageView
                            android:id="@+id/week_book_cover"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|right"
                            android:scaleType="fitXY" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:text="책 속의 한 줄"
                        android:textSize="20dp"
                        android:layout_marginTop="35dp"
                        android:gravity="left"
                        android:ellipsize="end"
                        android:textColor="@color/boram_purple"
                        android:fontFamily="@font/gilroy_extrabold" />

                    <TextView
                        android:id="@+id/week_book_sub_title"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:text=""
                        android:textSize="13dp"
                        android:layout_gravity="center|left"
                        android:gravity="left"
                        android:maxLines="5"
                        android:ellipsize="end"
                        android:textColor="#000000"
                        android:fontFamily="@font/gilroy_light" />

                    <TextView
                        android:id="@+id/week_book_title"
                        android:layout_width="200dp"
                        android:layout_height="20dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:layout_marginBottom="35dp"
                        android:fontFamily="@font/gmarketsansmedium"
                        android:text=""
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_gravity="bottom|left"
                        android:gravity="bottom|right"/>

                </FrameLayout>

            </LinearLayout>

        </ScrollView>

    </com.yalantis.phoenix.PullToRefreshView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tab_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:elevation="3dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0.5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            android:onClick="onClick_home"
            app:layout_constraintHeight_percent="1"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_home"
                android:layout_gravity="center"
                app:layout_constraintDimensionRatio="w,1:1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.45"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintHorizontal_bias="0.5">
            </ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/like_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            app:layout_constraintHeight_percent="1"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/home_btn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_like"
                android:layout_gravity="center"
                app:layout_constraintDimensionRatio="w,1:1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.45"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintHorizontal_bias="0.5">
            </ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/notification_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            app:layout_constraintHeight_percent="1"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/point_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_bell"
                android:layout_gravity="center"
                app:layout_constraintDimensionRatio="w,1:1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.45"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintHorizontal_bias="0.5">
            </ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/point_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            app:layout_constraintHeight_percent="1"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_point"
                android:layout_gravity="center"
                app:layout_constraintDimensionRatio="w,1:1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.45"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintHorizontal_bias="0.5">
            </ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/map_btn"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:elevation="4dp"
        android:clickable="true"
        android:onClick="onClick_search_map"
        android:background="@drawable/ripple_purple_btn"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98"
        app:layout_constraintHorizontal_bias="0.5">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_map"
            android:layout_gravity="center"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0.5">
        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>